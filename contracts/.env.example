# Trust AI Weave - Environment Variables for Smart Contracts

# Private key for deployment (DO NOT COMMIT WITH REAL VALUES)
PRIVATE_KEY=your_private_key_here

# RPC URLs for different networks
SEPOLIA_RPC_URL=https://rpc.sepolia.org
MAINNET_RPC_URL=https://mainnet.infura.io/v3/your_project_id
POLYGON_RPC_URL=https://polygon-rpc.com
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc
BASE_RPC_URL=https://mainnet.base.org

# Infura Project ID (if using Infura)
INFURA_PROJECT_ID=your_infura_project_id

# API Keys for contract verification
ETHERSCAN_API_KEY=your_etherscan_api_key
POLYGONSCAN_API_KEY=your_polygonscan_api_key
ARBISCAN_API_KEY=your_arbiscan_api_key
BASESCAN_API_KEY=your_basescan_api_key

# Gas reporting
REPORT_GAS=true
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key

# Chainlink Oracle addresses (will be set during deployment)
CHAINLINK_ETH_USD_FEED=
CHAINLINK_BTC_USD_FEED=

# Contract addresses (will be populated after deployment)
CREDIT_SCORE_NFT_ADDRESS=
TRUST_AI_TOKEN_ADDRESS=
CREDIT_ORACLE_ADDRESS=
LOAN_MANAGER_ADDRESS=
GOVERNANCE_ADDRESS=

# Initial contract parameters
INITIAL_CREDIT_SCORE_PRICE=0.001
INITIAL_TOKEN_SUPPLY=1000000000
GOVERNANCE_VOTING_PERIOD=7
GOVERNANCE_PROPOSAL_THRESHOLD=1000000